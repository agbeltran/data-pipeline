/* initial identity transformation */
transform column "$.'acronym'" to "dataset.ID";
transform column "$.'name'" to "dataset.title";
transform column "$.'acronym'" to "dataset.downloadURL" apply {{ result = 'https://www.niddkrepository.org/studies/icdb/' + value }};

/* Disease Information */
transform column "$.'conditions'" to "disease[].name" apply {{
arr=re.split("\s*,\s*",value,)
result=arr
}};

transform column "$.'dialysis_studies'" to "treatment.title" apply {{result='dialysis' if value.lower() == 'yes' else '' }};

/* Organism Information */
transform column "$.'studynum'" to "organism[0].name" apply {{ result = 'human' }};
transform column "$.'studynum'" to "organism[0].scientificName" apply {{ result = 'Homo sapiens' }};

/* Data Repository Information */
transform column "$.'neuron_id'" to "dataRepository.name" apply {{ result = 'NIDDK Central Repository' }};
transform column "$.'neuron_id'" to "dataRepository.abbreviation" apply {{ result = 'NIDDK CDR' }};
transform column "$.'neuron_id'" to "dataRepository.ID" apply {{ result = 'SCR:006542' }};
transform column "$.'neuron_id'" to "dataRepository.homePage" apply {{ result = 'https://www.niddkrepository.org/' }};

/* Organization Information */
transform column "$.'neuron_id'" to "organization.name" apply {{ result = 'National Institute of Diabetes and Digestive and Kidney Diseases' }};
transform column "$.'neuron_id'" to "organization.abbreviation" apply {{ result = 'NIDDK' }};
transform column "$.'neuron_id'" to "organization.ID" apply {{ result = 'SCR:012895' }};
transform column "$.'neuron_id'" to "organization.homePage" apply {{ result = 'http://niddk.nih.gov/' }};


