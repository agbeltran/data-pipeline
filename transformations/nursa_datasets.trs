/* Dataset Information */
transform column "$.'doi'" to "dataset.ID";
transform column "$.'name'" to "dataset.title";
transform column "$.'description'" to "dataset.description";
transform column "$.'doi'" to "dataset.downloadURL" apply {{ result = 'https://nursa.org/nursa/datasets/dataset.jsf?doi=' + value }};

/* Data Acquisition Information */
transform column "$.'type'" to "dataAcquisition.title";

/* Additional Information */
transform column "$.'species'" to "organism[].name";

transform column "$.'contributors'" to "person.name[]" apply {{
arr=re.split("\s*,\s*",value1,)
result=arr
}};

transform column "$.'tissue_cell_lines'" to "dataset.keywords[]" apply {{
arr=re.split("\s*,\s*",value1,)
result=arr
}};

transform column "$.'reference'" to "publication.description";


/* Data Repository Information */
transform column "$.'dataset_id'" to "dataRepository.name" apply {{ result = 'Nuclear Receptor Signaling Atlas' }};
transform column "$.'dataset_id'" to "dataRepository.abbreviation" apply {{ result = 'NURSA' }};
transform column "$.'dataset_id'" to "dataRepository.ID" apply {{ result = 'SCR:003287' }};
transform column "$.'dataset_id'" to "dataRepository.homePage" apply {{ result = 'http://www.nursa.org/' }};

/* Organization Information */
transform column "$.'dataset_id'" to "organization.name" apply {{ result = 'National Institute of Diabetes and Digestive and Kidney Diseases' }};
transform column "$.'dataset_id'" to "organization.abbreviation" apply {{ result = 'NIDDK' }};
transform column "$.'dataset_id'" to "organization.ID" apply {{ result = 'SCR:012895' }};
transform column "$.'dataset_id'" to "organization.homePage" apply {{ result = 'http://niddk.nih.gov/' }};

