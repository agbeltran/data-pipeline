/* initial identity transformation */
transform column "$.'project_name'" to "dataset.id";
transform column "$.'project_name'" to "dataset.title";
transform column "$.'project_url'" to "dataset.downloadURL" apply {{ result = 'http://yped.med.yale.edu/repository/' + value }};
transform column "$.'description'" to "dataset.description";
transform column "$.'samples'" to "dataset.size";

/* Additional Information */
transform column "$.'pubmedid'" to "publication.pmid" apply {{ result = 'pmid:' + value }};
transform column "$.'organisms'" to "organism.name";
transform column "$.'pi'" to "person.name";
transform column "$.'analysis_type'" to "dataAcquisition.title";


/* Data Repository Information */
transform column "$.'name'" to "dataRepository.name" apply {{ result = 'Yale Protein Expression Database' }};
transform column "$.'name'" to "dataRepository.abbreviation" apply {{ result = 'YPED' }};
transform column "$.'name'" to "dataRepository.ID" apply {{ result = 'SCR:001436' }};
transform column "$.'name'" to "dataRepository.homePage" apply {{ result = 'http://medicine.yale.edu/keck/nida/yped.aspx' }};

/* Organization Information */
transform column "$.'name'" to "organization.name" apply {{ result = 'Yale School of Medicine' }};
transform column "$.'name'" to "organization.abbreviation" apply {{ result = 'Yale' }};
transform column "$.'name'" to "organization.ID" apply {{ result = 'SCR:006339' }};
transform column "$.'name'" to "organization.homePage" apply {{ result = 'http://medicine.yale.edu/index.aspx' }};

